@model Curso_Idiomas.Models.Turma

@{
    ViewData["Title"] = "Excluir turma";
}

<h1>Excluir</h1>
<h3>Tem certeza que deseja excluir essa turma?</h3>
<div>
    <hr />
    <h4>Turma</h4>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disciplina.Nome)
        </dt>
        <dd class="col-sm-10 h4 text-danger">
            @Html.DisplayFor(model => model.Disciplina.Nome) | @Html.DisplayFor(model => model.Horario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Professor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Professor.NomeCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semestre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semestre)
        </dd>
        <dt class="col-sm-2">
        </dt>
        <dd>
            <table class="table table-secondary table-hover">
                <thead class="table-active">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Inscricoes)</th>
                    <th></th>
                </tr>
                </thead>
                @foreach (var inscricao in Model.Inscricoes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => inscricao.Aluno.NomeCompleto)
                        </td>
                        <td>
                            <a asp-controller="Aluno" asp-action="Details" asp-route-id="@inscricao.Aluno.AlunoId" class="btn btn-sm btn-outline-info mx-1">Ver aluno</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TurmaId" />
        <input type="submit" value="Excluir turma" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary mx-4">Voltar</a>
    </form>
</div>
