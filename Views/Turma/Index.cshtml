@model Curso_Idiomas.Models.ViewModels.TurmaViewModel

@{
    ViewData["Title"] = "Turmas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary btn-lg" asp-action="Create">Criar nova turma</a>
</p>

<form asp-action="Index" method="get">
    <div>
        <p>
            Filtrar por
            <select class="mx-1" name="filtroEscolhido" asp-for="FiltroEscolhido" asp-items="Model.OpcoesFiltro"></select>:

            <input class="mx-1" type="text" name="conteudoFiltro" value="@Model.ConteudoFiltro" />

            <input type="submit" value="Buscar" /> |

            <a asp-action="Index">Remover filtro</a>
        </p>
    </div>
</form>

<table class="table table-secondary table-hover">
    <thead class="table-active">
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-ordem="@Model.OrdemDisciplina"
                   asp-route-filtroEscolhido="@Model.FiltroEscolhido"
                   asp-route-conteudoFiltro="@Model.ConteudoFiltro"> @Html.DisplayNameFor(model => model.Turmas.First().Disciplina)</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-ordem="@Model.OrdemHorario"
                   asp-route-filtroEscolhido="@Model.FiltroEscolhido"
                   asp-route-conteudoFiltro="@Model.ConteudoFiltro"> @Html.DisplayNameFor(model => model.Turmas.First().Horario)</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-ordem="@Model.OrdemProfessor"
                   asp-route-filtroEscolhido="@Model.FiltroEscolhido"
                   asp-route-conteudoFiltro="@Model.ConteudoFiltro"> @Html.DisplayNameFor(model => model.Turmas.First().Professor)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turmas.First().Semestre)
            </th>
            <th>
                Alunos
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Turmas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Disciplina.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Professor.NomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semestre)
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-info px-4" asp-action="Details" asp-route-id="@item.TurmaId">@item.Inscricoes.Count</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-info mx-1" asp-action="Edit" asp-route-id="@item.TurmaId">Editar</a>
                    <a class="btn btn-sm btn-outline-danger mx-1" asp-action="Delete" asp-route-id="@item.TurmaId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
