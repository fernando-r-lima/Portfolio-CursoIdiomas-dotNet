@model Curso_Idiomas.Models.Disciplina

@{
    ViewData["Title"] = "Excluir disciplina";
}

<h1>Excluir</h1>
<h3>Tem certeza que deseja excluir essa disciplina?</h3>
<div>
    <hr />
    <h4>Disciplina</h4>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            Turmas
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Professor</th>
                    <th>Horário</th>
                    <th>Semestre</th>
                    <th></th>
                </tr>
                @foreach (var turma in Model.Turmas)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => turma.Professor.NomeCompleto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => turma.Horario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => turma.Semestre)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DisciplinaId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
