@model Curso_Idiomas.Models.ViewModels.DisciplinaViewModel

@{
    ViewData["Title"] = "Disciplinas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form>
    <div>
        <p>
            Filtrar:
            <input type="text" name="conteudoFiltro" value="@Model.ConteudoFiltro" />

            <input type="submit" value="Buscar" /> |

            <a asp-action="Index">Remover filtro</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" 
                asp-route-ordem="@Model.OrdemNome"
                asp-route-conteudoFiltro="@Model.ConteudoFiltro"> @Html.DisplayNameFor(model => model.Disciplinas.First().Nome)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Disciplinas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DisciplinaId">Turmas: @item.Turmas.Count</a> |
                    <a asp-action="Edit" asp-route-id="@item.DisciplinaId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.DisciplinaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
