@model IEnumerable<Aluno>

@{
    ViewData["Title"] = "Alunos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AlunoId">Turmas: @item.Inscricoes.Count</a> |
                    <a asp-action="Edit" asp-route-id="@item.AlunoId">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.AlunoId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
