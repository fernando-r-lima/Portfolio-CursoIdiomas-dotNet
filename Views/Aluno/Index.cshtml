@model IEnumerable<Aluno>

@{
    ViewData["Title"] = "Alunos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div>
        <p>
            Filtrar por nome ou sobrenome: <input type="text" name="filtro" value="@ViewData["FiltroAtual"]" />
            <input type="submit" value="Buscar" /> |
            <a asp-action="Index">Remover filtro</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-ordem="@ViewData["BotaoNome"]"> @Html.DisplayNameFor(model => model.Nome)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-ordem="@ViewData["BotaoSobrenome"]">@Html.DisplayNameFor(model => model.Sobrenome)</a>
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AlunoId">Turmas: @item.Inscricoes.Count</a> |
                    <a asp-action="Edit" asp-route-id="@item.AlunoId">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.AlunoId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
