@model Curso_Idiomas.Models.Aluno

@{
    ViewData["Title"] = "Excluir aluno";
}

<h1>Excluir</h1>
<h3>Tem certeza que deseja excluir esse aluno?</h3>
<div>
    <hr />
    <h4>Aluno</h4>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sobrenome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sobrenome)
        </dd>
        <dt class="col-sm-2">
            Turmas
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Disciplina</th>
                    <th>Horário</th>
                    <th>Professor</th>
                    <th>Semestre</th>
                    <th></th>
                </tr>
                @foreach (var inscricao in Model.Inscricoes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => inscricao.Turma.Disciplina.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => inscricao.Turma.Horario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => inscricao.Turma.Professor.NomeCompleto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => inscricao.Turma.Semestre)
                        </td>
                        <td>
                            <a asp-controller="Turma" asp-action="Details" asp-route-id="@inscricao.Turma.TurmaId">Ver turma</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AlunoId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
