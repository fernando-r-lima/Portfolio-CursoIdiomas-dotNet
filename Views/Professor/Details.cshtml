@model Professor

@{
    ViewData["Title"] = "Detalhes do professor";
}

<h2>@ViewData["Title"]</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sobrenome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Turmas)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Disciplina</th>
                    <th>Horário</th>
                    <th>Semestre</th>
                    <th></th>
                </tr>
                @foreach (var turma in Model.Turmas)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => turma.Disciplina.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => turma.Horario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => turma.Semestre)
                        </td>
                        <td>
                            <a asp-controller="Turma" asp-action="Details" asp-route-id="@turma.TurmaId">Ver turma</a>
                        </td>

                    </tr>
                }
            </table>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProfessorId" class="btn btn-default">Editar</a>
    <a asp-action="Index">Voltar</a>
</div>
