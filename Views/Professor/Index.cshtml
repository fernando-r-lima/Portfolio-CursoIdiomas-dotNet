@model IEnumerable<Professor>

@{
    ViewData["Title"] = "Professores";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                    <a asp-action="Index" asp-route-ordem="@ViewData["BotaoNome"]"> @Html.DisplayNameFor(model => model.Nome)</a>
            </th>
            <th>
                    <a asp-action="Index" asp-route-ordem="@ViewData["BotaoSobrenome"]"> @Html.DisplayNameFor(model => model.Sobrenome)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ProfessorId">Turmas: @item.Turmas.Count</a> |
                    <a asp-action="Edit" asp-route-id="@item.ProfessorId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProfessorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
