@model Curso_Idiomas.Models.ViewModels.ProfessorViewModel

@{
    ViewData["Title"] = "Professores";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary btn-lg" asp-action="Create">Criar novo professor</a>
</p>

<form asp-action="Index" method="get">
    <div>
        <p>
            Filtrar por
            <select class="mx-1" name="filtroEscolhido" asp-for="FiltroEscolhido" asp-items="Model.OpcoesFiltro"></select>:

            <input class="mx-1" type="text" name="conteudoFiltro" value="@Model.ConteudoFiltro" />

            <input type="submit" value="Buscar" /> |

            <a asp-action="Index">Remover filtro</a>
        </p>
    </div>

</form>

<table class="table table-secondary table-hover">
    <thead class="table-active">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Professores.First().ProfessorId)
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-ordem="@Model.OrdemNome"
                   asp-route-filtroEscolhido="@Model.FiltroEscolhido"
                   asp-route-conteudoFiltro="@Model.ConteudoFiltro"> @Html.DisplayNameFor(model => model.Professores.First().Nome)</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-ordem="@Model.OrdemSobrenome"
                   asp-route-filtroEscolhido="@Model.FiltroEscolhido"
                   asp-route-conteudoFiltro="@Model.ConteudoFiltro"> @Html.DisplayNameFor(model => model.Professores.First().Sobrenome)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professores.First().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professores.First().DataContratacao)
            </th>
            <th>
                Turmas
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Professores)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProfessorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataContratacao)
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-info px-4" asp-action="Details" asp-route-id="@item.ProfessorId">@item.Turmas.Count</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-info mx-1" asp-action="Edit" asp-route-id="@item.ProfessorId">Editar</a>
                    <a class="btn btn-sm btn-outline-danger mx-1" asp-action="Delete" asp-route-id="@item.ProfessorId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
